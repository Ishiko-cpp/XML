import ../../../Include/Ishiko/XML.bkl;
ishikopath = envvar("ISHIKO_CPP");
import $(ishikopath)/TestFramework/Include/Ishiko/TestFramework/TestFrameworkCore.bkl;

toolsets = gnu vs2017 vs2015 vs2013;

gnu.makefile = ../GNUmakefile/GNUmakefile;
vs2017.solutionfile = ../VC15/IshikoXMLTests.sln;
vs2015.solutionfile = ../VC14/IshikoXMLTests.sln;
vs2013.solutionfile = ../VC12/IshikoXMLTests.sln;

program IshikoXMLTests : IshikoXML, IshikoTestFrameworkCore
{
    archs = x86 x86_64;

    if ($(toolset) == gnu)
    {
        cxx-compiler-options = "-std=c++11";
        libs += IshikoXML IshikoTestFrameworkCore IshikoProcess IshikoErrors boost_filesystem boost_system;
    }

    headers
    {
        ../../Source/DocumentTests.h
        ../../Source/ElementTests.h
    }

    sources
    {
        ../../Source/main.cpp
        ../../Source/DocumentTests.cpp
        ../../Source/ElementTests.cpp
    }
}
